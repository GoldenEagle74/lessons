# напишите скрипт который раз в 5 секунд выводит надпись "я все еще тут"
# если нажать ctrl+c выводится надпись "ты меня не остановишь"
# спустя 10 если нажать ctrl+c выводится надпись "так уж и быть"
# запустите скрипт в фоновом режиме
#!/bin/bash

# Функция для обработки сигнала SIGINT (Ctrl+C)
interrupt_handler() {
    if [ $count -eq 0 ]; then
        echo "Ты меня не остановишь"
    elif [ $count -eg 2 ]; then
        echo "Так уж и быть"
        exit 0
    fi
}

# Устанавливаем обработчик сигнала SIGINT
trap interrupt_handler SIGINT

count=0

# Цикл, который выполняется каждые 5 секунд
while true; do
    echo "Я все еще тут"
    sleep 5
    ((count++))
done &

