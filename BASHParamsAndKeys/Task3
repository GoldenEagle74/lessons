#Напишите скрипт который принимает 2 аргумента и записывает первый аргумент в файл где имя файла второй аргумент.
#!/bin/bash

# Проверка количества аргументов
if (( $# != 2 )); then
  echo "Некорректное количество аргументов"
  exit 1
fi

# Получение аргументов
data="$1"
filename="$2"

# Запись данных в файл
if echo "$data" > "$filename"; then
  echo "Данные записаны в файл $filename"
else
  echo "Ошибка при записи в файл"
fi

