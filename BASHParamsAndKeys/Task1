# Напишите скрипт который дает студенту 3 секунды чтобы ответить на вопрос "ФИО преподавателя"
# Если он не успевает выводится "Вы отчислены"
#!/bin/bash

# Задаем вопрос с указанием времени ожидания
read -t 3 -p "ФИО преподавателя: " answer

# Проверяем, был ли получен ответ
if [[ -z $answer ]]; then
  echo "Вы отчислены"
else
  echo "Ответ принят: $answer"
fi

